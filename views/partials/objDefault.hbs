<div class="row instance-head">
    <div class="col col-xs-6">
        Instance {{iid}}
    </div>
    <div class="col col-xs-6 text-right" style="padding-right: 4px;">
        <button type="button" class="btn btn-default btn-xs lwm2m-btn" id="btn-read-{{oid}}-{{iid}}">
            <span class="glyphicon glyphicon-refresh" aria-hidden="true"></span>
        </button>
        <button type="button" class="btn btn-default btn-xs lwm2m-btn" id="btn-discover-{{oid}}-{{iid}}">
            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
        </button>
    </div>
</div>

<div style="margin-bottom: 10px;" id="resources-list-{{oid}}-{{iid}}">
    {{#resources}}
        {{> tmpl/resource-row oid=../oid iid=../iid rid=this.id r=this }}
    {{/resources}}
</div>