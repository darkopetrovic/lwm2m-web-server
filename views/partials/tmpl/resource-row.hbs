<div style="margin-bottom: 5px;" class="resource-row" data-id="{{rid}}">
    <div style="float: left; width:45%;" class="resource-row-name {{#if r.mandatory}}resource-mandatory{{/if}}">
        {{r.shortname}} <span style="font-size: 7pt;">{{rid}}</span></div>
    <div style="float: right; width:35%;text-align: right" class="resource-row-value">
      <div style="float: right;" id="value-{{oid}}-{{iid}}-{{rid}}">{{value}}</div>
    </div>
    <div style="display: inline-block; width: 20%;">
        {{#if r.access}}
            {{#ifEqual 'R' 'in' r.access}}
                <button type="button" data-toggle="tooltip" data-placement="top" title="Observe"
                        class="btn btn-{{#isObserved oid iid rid}}warning{{else}}default{{/isObserved}} btn-xs lwm2m-btn-{{#isObserved oid iid rid}}cancel{{else}}observe{{/isObserved}}"
                data-resource="{{oid}}-{{iid}}-{{rid}}">
                  <span class="glyphicon glyphicon-eye-{{#isObserved oid iid rid}}close{{else}}open{{/isObserved}}" aria-hidden="true"></span>
                </button>
                <button type="button" class="btn btn-default btn-xs lwm2m-btn"
                id="btn-read-{{oid}}-{{iid}}-{{rid}}">
                  <span class="glyphicon glyphicon-refresh tooltip-test" aria-hidden="true" title="Tooltip"></span>
                </button>
            {{/ifEqual}}

            {{#ifEqual 'W' 'in' r.access}}
                <button type="button" class="btn btn-default btn-xs lwm2m-btn-write"
                   data-resource="{{oid}}-{{iid}}-{{rid}}">
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </button>
            {{/ifEqual}}

            {{#ifEqual 'E' 'in' r.access}}
                <button type="button" class="btn btn-default btn-xs lwm2m-btn"
                id="btn-execute-{{oid}}-{{iid}}-{{rid}}">
                  <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
                </button>
            {{/ifEqual}}
        {{/if}}
    </div>
</div>